{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["ESNext", "DOM"],
		"allowUmdGlobalAccess": false,
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext"
	},
	"exclude": ["node_modules", "./src/**/__tests__", "dist"]
}
